<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.canhub.cropper.sample.AddBookActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Secțiunea pentru Autor -->
            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edit_text_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Introduceți autorul"
                app:layout_constraintTop_toBottomOf="@id/tv_author"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_choose_image_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alege fotografia"
                app:layout_constraintTop_toBottomOf="@id/edit_text_author"
                app:layout_constraintEnd_toStartOf="@id/btn_take_photo_author"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_take_photo_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fotografiază"
                app:layout_constraintTop_toBottomOf="@id/edit_text_author"
                app:layout_constraintStart_toEndOf="@id/btn_choose_image_author"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:id="@+id/image_view_author"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Image preview"
                app:layout_constraintTop_toBottomOf="@id/btn_choose_image_author"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Secțiunea pentru Titlu -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titlu"
                app:layout_constraintTop_toBottomOf="@id/image_view_author"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edit_text_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Introduceți titlul"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_choose_image_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alege fotografia"
                app:layout_constraintTop_toBottomOf="@id/edit_text_title"
                app:layout_constraintEnd_toStartOf="@id/btn_take_photo_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_take_photo_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fotografiază"
                app:layout_constraintTop_toBottomOf="@id/edit_text_title"
                app:layout_constraintStart_toEndOf="@id/btn_choose_image_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:id="@+id/image_view_title"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Image preview"
                app:layout_constraintTop_toBottomOf="@id/btn_choose_image_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Secțiunea pentru Editură -->
            <TextView
                android:id="@+id/tv_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editură"
                app:layout_constraintTop_toBottomOf="@id/image_view_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edit_text_publisher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Introduceți editura"
                app:layout_constraintTop_toBottomOf="@id/tv_publisher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_choose_image_publisher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alege fotografia"
                app:layout_constraintTop_toBottomOf="@id/edit_text_publisher"
                app:layout_constraintEnd_toStartOf="@id/btn_take_photo_publisher"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_take_photo_publisher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fotografiază"
                app:layout_constraintTop_toBottomOf="@id/edit_text_publisher"
                app:layout_constraintStart_toEndOf="@id/btn_choose_image_publisher"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:id="@+id/image_view_publisher"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Image preview"
                app:layout_constraintTop_toBottomOf="@id/btn_choose_image_publisher"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Secțiunea pentru ISBN -->
            <TextView
                android:id="@+id/tv_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISBN"
                app:layout_constraintTop_toBottomOf="@id/image_view_publisher"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edit_text_isbn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Introduceți ISBN"
                app:layout_constraintTop_toBottomOf="@id/tv_isbn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_choose_image_isbn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alege fotografia"
                app:layout_constraintTop_toBottomOf="@id/edit_text_isbn"
                app:layout_constraintEnd_toStartOf="@id/btn_take_photo_isbn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_take_photo_isbn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fotografiază"
                app:layout_constraintTop_toBottomOf="@id/edit_text_isbn"
                app:layout_constraintStart_toEndOf="@id/btn_choose_image_isbn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:id="@+id/image_view_isbn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Image preview"
                app:layout_constraintTop_toBottomOf="@id/btn_choose_image_isbn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Secțiunea pentru Anul Publicării -->
            <TextView
                android:id="@+id/tv_anP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anul publicării"
                app:layout_constraintTop_toBottomOf="@id/image_view_isbn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edit_an_publicare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Introduceți anul publicării"
                app:layout_constraintTop_toBottomOf="@id/tv_anP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:inputType="text"/>

            <Button
                android:id="@+id/btn_choose_image_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alege fotografia"
                app:layout_constraintTop_toBottomOf="@id/edit_an_publicare"
                app:layout_constraintEnd_toStartOf="@id/btn_take_photo_year"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btn_take_photo_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fotografiază"
                app:layout_constraintTop_toBottomOf="@id/edit_an_publicare"
                app:layout_constraintStart_toEndOf="@id/btn_choose_image_year"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"/>

            <ImageView
                android:id="@+id/image_view_year"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Image preview"
                app:layout_constraintTop_toBottomOf="@id/btn_choose_image_year"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Butonul de adăugare -->
            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adaugă"
                app:layout_constraintTop_toBottomOf="@id/image_view_year"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/maro_inchis"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


