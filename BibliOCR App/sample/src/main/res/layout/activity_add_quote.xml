<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.canhub.cropper.sample.AddQuoteActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Secțiunea pentru ID Carte -->
            <TextView
                android:id="@+id/tv_id_carte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Carte"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edit_text_id_carte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduceți id Carte"
                android:layout_marginTop="8dp"
                android:inputType="text"/>

            <!-- Secțiunea pentru Citat -->
            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Citat"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/edit_text_citat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Introduceți citatul"
                android:layout_marginTop="8dp"
                android:inputType="text"/>

            <!-- CheckBox pentru citatul personal/public -->
            <CheckBox
                android:id="@+id/checkbox_personal_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/citat_personal"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btn_choose_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alege fotografia"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btn_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fotografiaza"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="Image preview"
                android:layout_marginTop="8dp"/>

            <!-- Butonul de adăugare -->
            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adaugă"
                android:layout_gravity="center"
                android:backgroundTint="@color/maro_inchis"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>